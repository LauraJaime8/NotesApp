<%= form_with(model: note, local: true) do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group wrapper-form">
  <div class="field form-group">
    <%= form.label :title, class:'title-form'%>
    <%= form.text_field :title, id: :note_title, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :body, class: 'title-form' %>
    <%= form.text_area :body, id: :note_body, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= form.label :imagenPost, class: 'title-form' %>
    <%= form.file_field :cover %>
  </div>
  <div class="actions">
    <%= form.submit :class => "btn btn-primary" %>
    <%= link_to 'Back', notes_path ,class: 'btn btn-secondary btn-form'%>
  </div>
<% end %>
</div>

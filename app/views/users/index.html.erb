<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <!--th>Password</th-->
      <th>Email</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag "/imageAvatar/#{user.id}/avatar/#{user.cover_filename}", :style => 'width: 40px;'  if  user.cover_filename?%></td>
        <td><%= user.name %></td>
        <!--td><%= user.password %></td-->
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td>
          <% if current_user.admin? %>
            <%= link_to "Edit", edit_user_path(user) %>
            <%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" } %>
            <% end %>
        </td>
      </tr>
    <% end %>
    <td><%= link_to 'Back', root_path %></td>
  </tbody>
</table>
